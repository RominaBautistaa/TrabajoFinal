@model IEnumerable<TrabajoFinal.Models.JoinRequest>
@{
    ViewData["Title"] = "Mis Solicitudes";
}

<div class="page-header">
    <h1 class="page-title">Mis Solicitudes</h1>
    <p class="page-subtitle">Consulta el estado de tus solicitudes de unión a proyectos</p>
</div>

<div class="projects-page">
    <div class="container">
        @if (Model.Any())
        {
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Proyecto</th>
                            <th>Skills</th>
                            <th>Mensaje</th>
                            <th>Teléfono</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.Project?.Title</td>
                                <td>@request.Skills</td>
                                <td>@request.Message</td>
                                <td>@request.Phone</td>
                                <td>@request.DateSubmitted.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="chip chip--status-@(request.Status?.ToLower().Replace(" ", "-") ?? "pending")">@request.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state__content">
                    <h3 class="empty-state__title">No has enviado solicitudes</h3>
                    <p class="empty-state__message">Cuando solicites unirte a proyectos, podrás ver aquí el estado de tus solicitudes.</p>
                    <div class="empty-state__actions">
                        <a asp-controller="Projects" asp-action="Index" class="btn btn--primary">Buscar Proyectos</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .table-container {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: var(--clr-surface);
        border: 1px solid var(--clr-border);
        border-radius: var(--radius);
        overflow: hidden;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--clr-border);
    }

    .table th {
        background-color: rgba(255, 255, 255, 0.05);
        font-weight: 600;
        color: var(--clr-text);
    }

    .table tr:last-child td {
        border-bottom: none;
    }

    .chip--status-pending {
        background-color: #4a90e2;
        color: white;
    }

    .chip--status-accepted {
        background-color: #00C851;
        color: white;
    }

    .chip--status-rejected {
        background-color: #ff5252;
        color: white;
    }
</style>