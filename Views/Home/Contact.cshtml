@{
    ViewData["Title"] = "Contacto";
}

<section class="contact-page" style="padding: var(--gap-lg) 0;">
    <div class="container">
        <!-- Sección principal de Conexión con la Comunidad de WhatsApp -->
        <section class="whatsapp-community" style="text-align: center; padding: var(--gap-lg) 0;">
            <div class="community-header" style="margin-bottom: var(--gap-lg);">
                <h1 class="community-title" style="font-size: var(--font-size-4xl); font-weight: 700; margin-bottom: 1rem; background: linear-gradient(90deg, var(--clr-primary), #00e65b); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; display: inline-block;">Conecta con <span style="color: #00e65b;">Nosotros</span></h1>
                <div style="width: 80px; height: 4px; background: linear-gradient(90deg, var(--clr-primary), #00e65b); margin: 1rem auto; border-radius: 2px;"></div>
                <p class="community-subtitle" style="color: var(--clr-muted); max-width: 700px; margin: 1.5rem auto 0; font-size: var(--font-size-lg); line-height: 1.6;">
                    Únete a nuestra comunidad de WhatsApp para conocer personas con tus mismos intereses, recibir novedades, avisos y participar en eventos.
                </p>
            </div>

            <div class="connection-card" style="max-width: 500px; margin: var(--gap-lg) auto; background: linear-gradient(135deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.9)); border: 1px solid var(--clr-border); border-radius: var(--radius); padding: var(--gap-lg); box-shadow: var(--shadow); transition: all 0.3s ease;">
                <div class="card-icon pulse-animation" style="margin: 0 auto 1.5rem; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #25D366, #128C7E); border-radius: 50%;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="white">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                </div>
                <h3 class="card-title" style="font-size: var(--font-size-2xl); font-weight: 600; margin-bottom: 0.5rem; color: var(--clr-text);">WhatsApp</h3>
                <p class="card-subtitle" style="color: var(--clr-muted); margin-bottom: var(--gap);">Únete a nuestra comunidad</p>
                <a href="https://chat.whatsapp.com/DvyHSDTLLLl44izksTyLkQ" target="_blank" class="btn btn--primary whatsapp-btn" style="display: inline-block; margin: 0 auto; border-radius: var(--radius); background: linear-gradient(90deg, #25D366, #128C7E);">Haz clic para unirte</a>
            </div>

            <p class="motivational-text" style="color: var(--clr-muted); max-width: 600px; margin: var(--gap-lg) auto 0; font-size: var(--font-size-sm); font-weight: 300; text-align: center;">
                Forma parte de una comunidad que aprende, crea y crece contigo.
            </p>
        </section>
    </div>
</section>

<style>
    .whatsapp-community {
        position: relative;
    }
    
    .connection-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

    .whatsapp-btn:hover {
        background: linear-gradient(90deg, #128C7E, #25D366) !important;
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4) !important;
    }

    .card-icon {
        transition: transform 0.3s ease;
    }

    .card-icon:hover {
        transform: scale(1.1);
    }

    .community-title {
        animation: fadeInUp 0.8s ease-out;
    }

    .community-subtitle {
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .connection-card {
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }
    
    /* Pulse animation for WhatsApp icon */
    .pulse-animation {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7);
        }
        70% {
            box-shadow: 0 0 0 15px rgba(37, 211, 102, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>