@model IEnumerable<TrabajoFinal.Models.Project>
@{
    ViewData["Title"] = "Mis Proyectos";
    var userId = User?.Identity?.Name;

    // Separate projects where user is the creator vs member
    var myCreatedProjects = Model.Where(p => p.UserId == userId).ToList();
    var myMemberProjects = Model.Where(p => p.UserId != userId).ToList();
}

<div class="page-header" style="margin-bottom: 2rem;">
    <div class="container" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
        <div>
            <h1 class="page-title" style="margin-top: 60px;">Mis Proyectos</h1>
            <p class="page-subtitle">Gestiona tus proyectos y colaboraciones</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn--primary">Subir Proyecto</a>
        </div>
    </div>
</div>

<div class="projects-page" style="padding-bottom: var(--gap-lg);">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Projects created by the user -->
        @if (myCreatedProjects.Any())
        {
            <section class="projects-section">
                <h2 class="section-title">Mis Proyectos Creados</h2>
                <div class="projects-grid">
                    @foreach (var project in myCreatedProjects)
                    {
                        <div class="card">
                            <div class="card__image">
                                <div class="project-image-placeholder">
                                    @if (!string.IsNullOrEmpty(project.Title))
                                    {
                                        @project.Title.Substring(0, Math.Min(2, project.Title.Length)).ToUpper()
                                    }
                                    else
                                    {
                                        <text>PROY</text>
                                    }
                                </div>
                            </div>
                            <div class="card__content">
                                <div class="card__header">
                                    <span class="card__category">@project.Category</span>
                                    <h3 class="card__title">
                                        <a asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Id" class="card__title-link">@project.Title</a>
                                    </h3>
                                </div>

                                <p class="card__summary">@project.Summary</p>

                                <div class="card__meta">
                                    <span class="card__date">@project.UpdatedAt.ToString("dd/MM/yyyy")</span>
                                    <span class="chip chip--status-@(project.Status?.ToLower().Replace(" ", "-") ?? "activo")">@project.Status</span>
                                </div>

                                <div class="card__tags">
                                    @if (!string.IsNullOrEmpty(project.Tags))
                                    {
                                        @foreach (var tag in project.Tags.Split(','))
                                        {
                                            <span class="chip chip--tag">@tag.Trim()</span>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="card__footer">
                                <a asp-controller="Projects" asp-action="Manage" asp-route-id="@project.Id" class="btn btn--ghost">Gestionar Proyecto</a>
                            </div>
                        </div>
                    }
                </div>
            </section>
        }

        <!-- Projects where user is a member -->
        @if (myMemberProjects.Any())
        {
            <section class="projects-section" style="margin-top: 2rem;">
                <h2 class="section-title">Proyectos de Colaboración</h2>
                <div class="projects-grid">
                    @foreach (var project in myMemberProjects)
                    {
                        <div class="card">
                            <div class="card__image">
                                <div class="project-image-placeholder">
                                    @if (!string.IsNullOrEmpty(project.Title))
                                    {
                                        @project.Title.Substring(0, Math.Min(2, project.Title.Length)).ToUpper()
                                    }
                                    else
                                    {
                                        <text>PROY</text>
                                    }
                                </div>
                            </div>
                            <div class="card__content">
                                <div class="card__header">
                                    <span class="card__category">@project.Category</span>
                                    <h3 class="card__title">
                                        <a asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Id" class="card__title-link">@project.Title</a>
                                    </h3>
                                </div>

                                <p class="card__summary">@project.Summary</p>

                                <div class="card__meta">
                                    <span class="card__date">@project.UpdatedAt.ToString("dd/MM/yyyy")</span>
                                    <span class="chip chip--status-@(project.Status?.ToLower().Replace(" ", "-") ?? "activo")">@project.Status</span>
                                </div>

                                <div class="card__tags">
                                    @if (!string.IsNullOrEmpty(project.Tags))
                                    {
                                        @foreach (var tag in project.Tags.Split(','))
                                        {
                                            <span class="chip chip--tag">@tag.Trim()</span>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="card__footer">
                                <a asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Id" class="btn btn--ghost">Ver Proyecto</a>
                            </div>
                        </div>
                    }
                </div>
            </section>
        }

        <!-- Empty state when no projects -->
        @if (!myCreatedProjects.Any() && !myMemberProjects.Any())
        {
            <div class="empty-state">
                <div class="empty-state__content">
                    <h3 class="empty-state__title">Aún no tienes proyectos</h3>
                    <p class="empty-state__message">Comienza subiendo tu primer proyecto o uniéndote a un proyecto existente para que la comunidad pueda verlo y colaborar.</p>
                    <div class="empty-state__actions">
                        <a asp-action="Create" class="btn btn--primary">Subir Proyecto</a>
                        <a asp-controller="Projects" asp-action="Index" class="btn btn--secondary">Buscar Proyectos</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .projects-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--clr-text);
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--clr-border);
    }
</style>
</div>
</div>
</div>